header.header
  nav.nav.nav--tours
    a.nav__el(href="/") All tours
  .header__logo
    img(src="/img/logo-white.png" alt="Natours logo")
  nav.nav.nav--user
  
    if user
      a.nav__el.nav__el--logout Log out
      a(href="/me").nav__el
        img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`).nav__user-img
        span= user.name.split(" ")[0] 
    else 
      a(href='/login').nav__el Log in
      a(href='#').nav__el.nav__el--cta Sign up